<script>
  const  showmore = document.querySelector('.showmore')

  const  showbtn = document.querySelector('.showbtn')
  
  showbtn.addEventListener('click',function(e){
    showmore.classList.toggle('hidden')
    // showbtn.innerHTML = 'Show Less'
  })
  document.addEventListener('DOMContentLoaded', () => {
  // Function to animate numbers
  function animateValue(obj, start, end, duration, isPercentage = false) {
    let startTimestamp = null;
    const step = (timestamp) => {
      if (!startTimestamp) startTimestamp = timestamp;
      const progress = Math.min((timestamp - startTimestamp) / duration, 1);
      obj.textContent = Math.floor(progress * (end - start) + start) + (isPercentage ? '%' : '');
      if (progress < 1) {
        window.requestAnimationFrame(step);
      }
    };
    window.requestAnimationFrame(step);
  }

  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.id;
        switch (id) {
          case 'caseStudy':
            animateValue(entry.target.querySelector('b'), 0, 280, 2000);
            break;
          case 'happyClients':
            animateValue(entry.target.querySelector('b'), 0, 180, 2000);
            break;
          case 'winRate':
            animateValue(entry.target.querySelector('b'), 0, 97, 2000, true);
            break;
          case 'expertLawyers':
            animateValue(entry.target.querySelector('b'), 0, 10, 2000);
            break;
        }
        observer.unobserve(entry.target);
      }
    });
  }, {
    threshold: 0.5 // Trigger when 50% of the element is in the viewport
  });

  // Observe the elements
  document.querySelectorAll('.flex').forEach(el => {
    observer.observe(el);
  });
});

  
</script>